---
const pricingPlans = [
  {
    name: "Básico",
    price: "€9.99",
    period: "por mes",
    features: [
      "Almacenamiento de hasta 10 facturas",
      "Análisis básico de costos",
      "Recomendaciones simples de ahorro",
      "Soporte por email"
    ],
    cta: "Comenzar",
    popular: false
  },
  {
    name: "Premium",
    price: "€19.99",
    period: "por mes",
    features: [
      "Almacenamiento ilimitado de facturas",
      "Análisis avanzado de costos",
      "Recomendaciones personalizadas de ahorro",
      "Herramienta de comparación de proveedores",
      "Soporte prioritario por email",
      "Informe mensual de ahorros"
    ],
    cta: "Empieza a Ahorrar",
    popular: true
  },
  {
    name: "Familiar",
    price: "€29.99",
    period: "por mes",
    features: [
      "Todo lo incluido en Premium",
      "Hasta 5 miembros familiares",
      "Panel de control familiar",
      "Soporte telefónico",
      "Asistencia en negociación de contratos",
      "Consulta trimestral de ahorros"
    ],
    cta: "Elegir Plan Familiar",
    popular: false
  }
];
---

<section id="pricing" class="pricing">
  <div class="container">
    <h2 class="section-title">Planes de Precios</h2>
    <p class="section-subtitle">Elige el plan que se adapte a tus necesidades</p>
    
    <div class="pricing-grid">
      {pricingPlans.map(plan => (
        <div class={`pricing-card ${plan.popular ? 'popular' : ''}`}>
          {plan.popular && <div class="popular-badge">Más Popular</div>}
          <h3 class="plan-name">{plan.name}</h3>
          <div class="plan-price">
            <span class="amount">{plan.price}</span>
            <span class="period">{plan.period}</span>
          </div>
          <ul class="features-list">
            {plan.features.map(feature => (
              <li>{feature}</li>
            ))}
          </ul>
          <a href="#contact" class="btn btn-primary plan-cta">{plan.cta}</a>
        </div>
      ))}
    </div>
    
    <div class="pricing-guarantee">
      <p>Todos los planes incluyen garantía de devolución de 30 días. Sin contratos, cancela cuando quieras.</p>
    </div>
  </div>
</section>

<style>
  .pricing {
    background-color: var(--color-background);
    position: relative;
    overflow: hidden;
  }
  
  .pricing::before {
    content: '';
    position: absolute;
    width: 400px;
    height: 400px;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.1) 0%, rgba(236, 72, 153, 0.1) 100%);
    top: -100px;
    left: -100px;
    z-index: 0;
  }
  
  .pricing::after {
    content: '';
    position: absolute;
    width: 300px;
    height: 300px;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.1) 0%, rgba(236, 72, 153, 0.1) 100%);
    bottom: -100px;
    right: -100px;
    z-index: 0;
  }
  
  .pricing .container {
    position: relative;
    z-index: 1;
  }
  
  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2.5rem;
    margin: 3rem 0;
  }
  
  .pricing-card {
    background-color: white;
    border-radius: 20px;
    padding: 3rem 2rem;
    box-shadow: var(--box-shadow);
    position: relative;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    border: 1px solid rgba(0, 0, 0, 0.05);
    overflow: hidden;
  }
  
  .pricing-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 6px;
    background: linear-gradient(to right, var(--color-primary), var(--color-secondary));
    opacity: 0.5;
    transition: opacity 0.3s ease;
  }
  
  .pricing-card:hover {
    transform: translateY(-15px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }
  
  .pricing-card:hover::before {
    opacity: 1;
  }
  
  .pricing-card.popular {
    border: none;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.05) 0%, rgba(236, 72, 153, 0.05) 100%);
    transform: scale(1.05);
  }
  
  .pricing-card.popular::before {
    height: 8px;
    opacity: 1;
    background: linear-gradient(to right, var(--color-primary), var(--color-secondary));
  }
  
  .pricing-card.popular:hover {
    transform: scale(1.05) translateY(-15px);
  }
  
  .popular-badge {
    position: absolute;
    top: -12px;
    right: 20px;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    color: white;
    padding: 0.5rem 1.5rem;
    border-radius: 30px;
    font-size: 0.9rem;
    font-weight: 600;
    box-shadow: 0 4px 10px rgba(99, 102, 241, 0.25);
  }
  
  .plan-name {
    font-size: 1.5rem;
    text-align: center;
    margin-bottom: 1.5rem;
    color: var(--color-text);
  }
  
  .plan-price {
    text-align: center;
    margin-bottom: 2.5rem;
    position: relative;
  }
  
  .amount {
    font-size: 3.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    display: inline-block;
  }
  
  .period {
    font-size: 1.1rem;
    color: var(--color-text-light);
    display: block;
    margin-top: 0.5rem;
  }
  
  .features-list {
    list-style: none;
    margin-bottom: 2.5rem;
    flex-grow: 1;
  }
  
  .features-list li {
    padding: 0.8rem 0;
    position: relative;
    padding-left: 2rem;
    color: var(--color-text);
  }
  
  .features-list li::before {
    content: "✓";
    position: absolute;
    left: 0;
    color: var(--color-accent);
    font-weight: bold;
  }
  
  .plan-cta {
    width: 100%;
    text-align: center;
    padding: 1rem;
    font-weight: 600;
    border-radius: 10px;
    font-size: 1.1rem;
    transition: all 0.3s ease;
  }
  
  .pricing-guarantee {
    text-align: center;
    margin-top: 3rem;
    background-color: var(--color-background-alt);
    padding: 1.5rem;
    border-radius: 10px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .pricing-guarantee p {
    color: var(--color-text);
    font-size: 1.1rem;
  }
  
  @media (max-width: 768px) {
    .pricing-card.popular {
      transform: none;
    }
    
    .pricing-card.popular:hover {
      transform: translateY(-15px);
    }
  }
</style> 